<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd 
	http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-3.0.xsd"
	default-lazy-init="true">

	<description>SnakerEngine配置 </description>
	<bean id="snakerEngine" class="org.snaker.engine.spring.SnakerEngineFactoryBean"/> 
	
	<bean id="dbAccess" class="org.snaker.engine.access.hibernate3.HibernateAccess">
		<property name="sessionFactory" ref="sessionFactory"/>
	</bean>
	
	<bean class="org.snaker.engine.core.ProcessService">
		<property name="access" ref="dbAccess"/>
	</bean>
	<bean class="org.snaker.engine.core.OrderService">
		<property name="access" ref="dbAccess"/>
	</bean>
	<bean class="org.snaker.engine.core.TaskService">
		<property name="access" ref="dbAccess"/>
	</bean>
	<bean class="org.snaker.engine.core.ManagerService">
		<property name="access" ref="dbAccess"/>
	</bean>
	<bean class="org.snaker.engine.core.QueryService">
		<property name="access" ref="dbAccess"/>
	</bean>
	
